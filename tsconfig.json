{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strictNullChecks":false,
    "lib": [
      "dom",
      "es2018"
    ],
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "resolveJsonModule": true,
      "noImplicitAny":false
  },
  "include": [
    "src/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "json-server",
    "scripts",
    "webpack",
    "export-server"
  ]
}
